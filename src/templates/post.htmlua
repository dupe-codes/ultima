<div class="post-content">

    <div class="nav-bar">
        <span class="nav-list">
            <a href="{{ generate_absolute_path(config, 'index.html') }}">~/</a>
        </span>
    </div>

    <h1>{{ title }}</h1>

    {{ content }}

    {% if metadata.discussion_link then }}
        <i class="mi-message"></i>
        <a href="{{ metadata.discussion_link }}">discuss</a>
    {% end }}

</div>

