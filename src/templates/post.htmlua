<div class="post-content">

    <div class="nav-bar">
        <span class="nav-list">
            <a href="{{ config.generator.root_dir .. '/' .. config.generator.output_dir .. '/index.html' }}">~/</a>
        </span>
    </div>

    <h1>{{ title }}</h1>

